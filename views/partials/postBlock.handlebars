<div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>By: {{this.user.username}}</p>
    <a href="/posts/{{this.id}}">Read More</a>
    {{#if user}}
        {{#if user.id this.user.id}}
            <a href="/posts/{{this.id}}/edit">Edit</a>
            <button class="delete-post" data-id="{{this.id}}">Delete</button>
        {{/if}}
    {{/if}}
</div>
